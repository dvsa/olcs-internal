<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true" syntaxCheck="true" strict="true">
    <testsuites>
        <testsuite name="OLCS Internal Application">
            <directory>./</directory>
            <directory>../vendor/olcs/OlcsCommon/application_test/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">../module/Olcs/src</directory>
            <directory suffix=".php">../module/Admin/src</directory>
            <directory suffix=".php">../../olcs-common/Common/src</directory>
            <directory suffix=".php">../module/Admin/src</directory>
            <exclude>
                <directory>../module/Olcs/src/Form/</directory>
                <directory>../module/Olcs/src/Table/</directory>
                <directory>../../olcs-common/Common/src/Common/Form/Forms/</directory>
                <directory>../../olcs-common/Common/src/Common/Form/Fieldsets/*.fieldset.php</directory>
                <directory>../../olcs-common/Common/src/Common/Form/Elements/*.element.php</directory>
                <directory>../../olcs-common/Common/src/Common/Table/Tables/</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>