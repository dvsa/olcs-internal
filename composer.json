{
    "name": "olcs/olcs-internal",
    "description": "OLCS Internal Web Site",
    "repositories": [
        {
            "packagist": false
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/OLCS",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/Packagist-Proxy",
            "type": "composer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "zendframework/zendframework": "~2.4.0",
        "doctrine/annotations": "^1.2.3",
        "symfony/filesystem": "~3.0.0",
        "zf-commons/zfc-rbac": "~2.5.0",
        "olcs/olcs-transfer": "dev-project/ecmt-migration",
        "olcs/olcs-utils": "~4.206.0",
        "olcs/olcs-auth": "dev-project/ecmt-migration",
        "soflomo/purifier": "~0.1.0",
        "olcs/olcs-logging": "~4.206.0",
        "elendev/nexus-composer-push": "^0.1",
        "olcs/olcs-common": "dev-project/ecmt-migration"
    },
    "require-dev": {
        "olcs/olcs-devtools": "~4.206.0",
        "olcs/olcs-testhelpers": "~4.206.0",
        "mockery/mockery": "1.2.4",
        "phpstan/phpstan-shim": "^0.10.5",
        "phpstan/phpstan-mockery": "^0.10.2",
        "johnkary/phpunit-speedtrap": "^3.0"
    },
    "autoload": {
        "classmap": [
            "module/Admin/src",
            "module/Olcs/src",
            "vendor/olcs/olcs-common/Common/src/Common",
            "vendor/olcs/olcs-common/test/Common"
        ],
        "psr-4": {
            "Common\\": "vendor/olcs/olcs-common/Common/src/Common",
            "CommonTest\\": "vendor/olcs/olcs-common/test/Common/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "secure-http": false,
        "platform": {
            "php": "7.1.16"
        }
    },
    "scripts": {
        "ut": "phpunit -c test/phpunit.xml --stop-on-failure",
        "review": "review",
        "cs": "phpcs --severity=1 --standard=vendor/olcs/coding-standards/Profiles/DVSA/CS/ruleset.xml",
        "coverage": "phpunit -c test/phpunit.xml --coverage-html ./test/coverage/html",
        "sonar": "phpunit -c test/phpunit.xml --coverage-clover ./test/coverage/coverage-report.clover --log-junit ./test/coverage/log.junit",
        "update-syms": "composer-update-syms",
        "release": "release"
    },
    "extra": {
        "nexus-push": {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-internal",
            "ignore": [
                "test/",
                "config/autoload/local.php",
                "node_modules/"
            ]
        }
    }
}
