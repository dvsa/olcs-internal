<?php
if (!isset($navigation)) {

    $navigation = $this->navigation('navigation');

    if ($navigation) {
        $active = $navigation->findOneBy('active', true);

        if ($active) {
            $navigation = $active->getParent();
        } else {
            $navigation = null;
        }
    }
}

if ($navigation):

    ?>
    <h4><?php echo $this->translate($navigation->getLabel()); ?></h4>
    <?php
    echo $this->navigation($navigation)
        ->menu()->setPartial('partials/vertical-navigation');

endif;

if (isset($documents) && $documents && isset($filterForm)): ?>
    <div class="filters">
        <?php echo $this->form($filterForm); ?>
    </div>
    <?php
endif;
